<p id="notice"><%= notice %></p>

<div class="container">
<div class ="jumbotron text-center">
<h1>Subject List</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Course code</th>
      <th>Course name</th>
      <th>Section</th>
      <th>Attendance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.course_code %></td>
        <td><%= subject.course_name %></td>
        <td><%= subject.section %></td>
        <td><%= link_to 'View Student List', students_path %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Delete', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Subject', new_subject_path %>
</div>
</div>