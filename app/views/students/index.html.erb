<p id="notice"><%= notice %></p>

<div class="container">
<div class ="jumbotron text-center"> 

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id number</th>
      <th>Name</th>
      <th>Course</th>
      
      <th colspan="3"></th>
    </tr>    
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id_number %></td>
        <td><%= student.name %></td>
        <td><%= student.course %></td>

        <%= form_tag('students_path') do %>
          <td><%= radio_button_tag :status, 'present' %></td>
          <td><%= label_tag :status_present, 'Present' %></td>
          <td><%= radio_button_tag :status, 'late' %></td>
          <td><%= label_tag :status_late, 'Late' %></td>
          <td><%= radio_button_tag :status, 'absent' %></td>
          <td><%= label_tag :status_absent, 'Absent' %></td>
        <% end %>

        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= submit_tag :submit %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Import Students</h2>

<%= form_tag import_students_path, multipart: true do%>
	<%= file_field_tag :file%>
	<%= submit_tag "Import"%>
<% end %>

<br>

<%= link_to 'New Student', new_student_path %>
<%= link_to 'Back to subject list', subjects_path %>
</div>
</div>